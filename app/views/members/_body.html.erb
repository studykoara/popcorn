<table class="attr">
  <tr>
    <th>ユーザー名</th>
    <td><%= @member.name %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @member.full_name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= @member.sex == 1 ? "男" : "女" %></td>
  </tr>
  <tr>
    <th>誕生日</th>
    <td><%= @member.birthday&.strftime("%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.mail %></td>
  </tr>
  <tr>
    <th>クレジットカード番号</th>
    <td><%= @member.credit_number %></td>
  </tr>
  <tr>
    <th>有効期限</th>
    <td><%= @member.expiration_date %></td>
  </tr>
  <tr>
    <th>認証コード</th>
    <td><%= @member.authentication_number %></td>
  </tr>
  <tr>
    <th>管理者</th>
    <td><%= @member.administrator? ? "○" : "－" %></td>
  </tr>
</table>
